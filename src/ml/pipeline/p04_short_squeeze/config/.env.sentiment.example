# Sentiment Module Environment Variables
# Copy this file to .env and configure as needed

# ==============================================
# SENTIMENT PROVIDER API KEYS (Optional - increases rate limits)
# ==============================================

# StockTwits (Optional - higher rate limits with token)
# Get token from: https://api.stocktwits.com/developers/docs/authentication
STOCKTWITS_ACCESS_TOKEN=your_token_here

# NewsAPI (Optional - for news sentiment)
# Get key from: https://newsapi.org/
NEWSAPI_API_KEY=your_key_here

# Alpha Vantage (Optional - alternative news source)
# Get key from: https://www.alphavantage.co/
ALPHAVANTAGE_KEY=your_key_here

# ==============================================
# SENTIMENT PROVIDER TOGGLES
# ==============================================

# Enable/disable specific sentiment providers
SENTIMENT_STOCKTWITS_ENABLED=true
SENTIMENT_REDDIT_ENABLED=true
SENTIMENT_NEWS_ENABLED=true
SENTIMENT_GOOGLE_TRENDS_ENABLED=false   # Conservative, low rate limit
SENTIMENT_TWITTER_ENABLED=false         # Requires Twitter API access
SENTIMENT_DISCORD_ENABLED=false         # Requires Discord channel access

# ==============================================
# SENTIMENT ML ENHANCEMENT (Optional)
# ==============================================

# HuggingFace ML-based sentiment analysis (CPU/GPU intensive)
SENTIMENT_HF_ENABLED=false
SENTIMENT_HF_MODEL=cardiffnlp/twitter-roberta-base-sentiment
SENTIMENT_HF_DEVICE=cpu                 # or 'cuda' if GPU available

# ==============================================
# SENTIMENT PERFORMANCE SETTINGS
# ==============================================

# Concurrency and rate limiting
SENTIMENT_CONCURRENCY=8                 # Parallel requests
SENTIMENT_RATE_LIMIT_DELAY=0.3          # Seconds between requests
SENTIMENT_BATCH_SIZE=50                 # Tickers per batch

# ==============================================
# SENTIMENT CACHING (Optional - improves performance)
# ==============================================

# Cache settings
SENTIMENT_CACHE_TTL=1800                # 30 minutes (seconds)
SENTIMENT_CACHE_ENABLED=true

# Redis cache (optional - better than in-memory)
SENTIMENT_REDIS_ENABLED=false
SENTIMENT_REDIS_HOST=localhost
SENTIMENT_REDIS_PORT=6379
SENTIMENT_REDIS_DB=2
SENTIMENT_REDIS_PASSWORD=              # Optional

# ==============================================
# SENTIMENT MONITORING
# ==============================================

SENTIMENT_LOG_FAILURES=true
SENTIMENT_ALERT_ON_ALL_DOWN=true
SENTIMENT_PERFORMANCE_PROFILING=false   # Enable detailed profiling

# ==============================================
# FEATURE FLAGS
# ==============================================

# Master feature flag for enhanced sentiment integration
FEATURE_ENHANCED_SENTIMENT=true         # Set to false to use legacy Finnhub only
