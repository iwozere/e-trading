{
    "name": "SimpleATRExitMixin",
    "params": {
        "atr_period": {
            "type": "int",
            "low": 5,
            "high": 90,
            "default": 14
        },
        "sl_multiplier": {
            "type": "float",
            "low": 1.5,
            "high": 3.5,
            "default": 2.5
        }
    },
    "indicators": [
        {
            "type": "ATR",
            "params": {
                "timeperiod": "atr_period"
            },
            "fields_mapping": {
                "atr": "exit_atr"
            }
        }
    ],
    "description": "Simplified ATR exit. Exits when price crosses below (entry - sl_multiplier * ATR_at_entry)."
}